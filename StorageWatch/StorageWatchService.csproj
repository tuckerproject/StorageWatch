	<Nullable>enable</Nullable>
	<ImplicitUsings>enable</ImplicitUsings>
	<RootNamespace>StorageWatch</RootNamespace>
	<AssemblyName>StorageWatch</AssemblyName>
	<UserSecretsId>dotnet-StorageWatch-5171660d-2158-404d-801d-e9cb0c54631b</UserSecretsId>
