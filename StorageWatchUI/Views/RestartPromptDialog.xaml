<Window x:Class="StorageWatchUI.Views.RestartPromptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Restart Required" Height="250" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White"
        WindowStyle="ToolWindow">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <!-- Icon/Title -->
            <TextBlock Text="âœ“" 
                       FontSize="48" 
                       Foreground="#FF4CAF50"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Title -->
            <TextBlock Text="Update Installed" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="#FF333333"
                       TextAlignment="Center"
                       Margin="0,0,0,10"/>

            <!-- Message -->
            <TextBlock Text="StorageWatch must restart to complete the update." 
                       FontSize="13" 
                       Foreground="#FF666666"
                       TextAlignment="Center"
                       Margin="0,0,0,30"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
                <Button Content="Restart Later" 
                        Width="120" 
                        Padding="10,8"
                        Margin="0,0,10,0"
                        Background="Transparent"
                        Foreground="#FF333333"
                        BorderThickness="1"
                        BorderBrush="#FFCCCCCC"
                        Cursor="Hand"
                        Click="RestartLaterButton_Click"/>
                <Button Content="Restart Now" 
                        Width="120" 
                        Padding="10,8"
                        Background="#FF4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="RestartNowButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
