<UserControl x:Class="StorageWatchUI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Dashboard - Local Machine" FontSize="24" FontWeight="Bold" 
                       Foreground="{DynamicResource PrimaryText}" VerticalAlignment="Center"/>
            <Button Content="Refresh" Command="{Binding RefreshCommand}" 
                    Margin="20,0,0,0" Padding="10,5"/>
        </StackPanel>

        <!-- Disk List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Disks}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource CardBackground}" 
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1" 
                                CornerRadius="5" 
                                Margin="0,0,0,15" 
                                Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Drive Name and Status -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="{Binding DriveName}" FontSize="20" FontWeight="Bold" 
                                               Foreground="{DynamicResource PrimaryText}"/>
                                    <Ellipse Width="15" Height="15" Margin="10,0,0,0" 
                                             Fill="{Binding Status, Converter={StaticResource StatusToColorConverter}}"/>
                                    <TextBlock Text="{Binding Status}" Margin="5,0,0,0" 
                                               Foreground="{DynamicResource SecondaryText}"/>
                                </StackPanel>

                                <!-- Space Information -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,10,0,0">
                                    <TextBlock Foreground="{DynamicResource SecondaryText}">
                                        <Run Text="Free: "/>
                                        <Run Text="{Binding FreeSpaceGb, StringFormat='{}{0:N2} GB'}" FontWeight="Bold"/>
                                        <Run Text=" of "/>
                                        <Run Text="{Binding TotalSpaceGb, StringFormat='{}{0:N2} GB'}" FontWeight="Bold"/>
                                        <Run Text=" ("/>
                                        <Run Text="{Binding PercentFree, Mode=OneWay, StringFormat='{}{0:N2}%'}" FontWeight="Bold"/>
                                        <Run Text=" free)"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Progress Bar -->
                                <ProgressBar Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                                             Height="20" 
                                             Margin="0,10,0,0"
                                             Value="{Binding PercentUsed, Mode=OneWay}" 
                                             Maximum="100"
                                             Foreground="{Binding Status, Converter={StaticResource StatusToColorConverter}}"/>

                                <!-- Last Updated -->
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                           Text="{Binding LastUpdated, StringFormat='Last updated: {0:g}'}" 
                                           FontSize="10" 
                                           Foreground="{DynamicResource SecondaryText}" 
                                           VerticalAlignment="Top"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource StatusBarBackground}" 
                BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderBrush}" 
                Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="{DynamicResource SecondaryText}"/>
                <TextBlock Text=" | Loading..." 
                           Foreground="{DynamicResource SecondaryText}" 
                           Margin="10,0,0,0"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
