<UserControl x:Class="StorageWatchUI.Views.CentralView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Central Server - All Machines" FontSize="24" FontWeight="Bold" 
                       Foreground="{DynamicResource PrimaryText}" VerticalAlignment="Center"/>
            <Button Content="Refresh" Command="{Binding RefreshCommand}" 
                    Margin="20,0,0,0" Padding="10,5"/>
        </StackPanel>

        <!-- Machine List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Not Enabled Message -->
                <Border Background="{DynamicResource CardBackground}" 
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1" 
                        CornerRadius="5" 
                        Padding="20"
                        Visibility="{Binding IsCentralEnabled, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Central Server Not Enabled" FontSize="18" FontWeight="Bold" 
                                   Foreground="{DynamicResource PrimaryText}" Margin="0,0,0,10"/>
                        <TextBlock Text="The central server feature is not enabled in your configuration." 
                                   Foreground="{DynamicResource SecondaryText}" TextWrapping="Wrap"/>
                        <TextBlock Text="To enable it, open Settings and configure the CentralServer section." 
                                   Foreground="{DynamicResource SecondaryText}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Machine Items -->
                <ItemsControl ItemsSource="{Binding Machines}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource CardBackground}" 
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1" 
                                    CornerRadius="5" 
                                    Margin="0,0,0,15" 
                                    Padding="20">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Machine Header -->
                                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                                        <TextBlock Text="{Binding MachineName}" FontSize="18" FontWeight="Bold" 
                                                   Foreground="{DynamicResource PrimaryText}"/>
                                        <Ellipse Width="12" Height="12" Margin="10,0,0,0" 
                                                 Fill="{Binding IsOnline, Converter={StaticResource BoolToGreenRedConverter}}"/>
                                        <TextBlock Text="{Binding IsOnline, Converter={StaticResource BoolToOnlineOfflineConverter}}" 
                                                   Margin="5,0,0,0" 
                                                   Foreground="{DynamicResource SecondaryText}"/>
                                        <TextBlock Text="{Binding LastReportTime, StringFormat=' | Last report: {0:g}'}" 
                                                   Foreground="{DynamicResource SecondaryText}"/>
                                    </StackPanel>

                                    <!-- Disk List -->
                                    <ItemsControl Grid.Row="1" ItemsSource="{Binding Disks}" Margin="0,10,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                    <TextBlock Text="{Binding DriveName}" Width="50" 
                                                               Foreground="{DynamicResource PrimaryText}"/>
                                                    <Ellipse Width="10" Height="10" Margin="5,0" 
                                                             Fill="{Binding Status, Converter={StaticResource StatusToColorConverter}}"/>
                                                    <TextBlock Text="{Binding Status}" Width="80" 
                                                               Foreground="{DynamicResource SecondaryText}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource StatusBarBackground}" 
                BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderBrush}" 
                Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="{DynamicResource SecondaryText}"/>
                <TextBlock Text=" | Loading..." 
                           Foreground="{DynamicResource SecondaryText}" 
                           Margin="10,0,0,0"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
