@page "/settings"
@model StorageWatchServer.Dashboard.SettingsModel

<h1>Settings</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="card error">
        <strong>Error:</strong> @Model.ErrorMessage
    </div>
}

<div class="card">
    <table class="table">
        <thead>
            <tr>
                <th>Key</th>
                <th>Value</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
        @if (Model.Settings.Count == 0)
        {
            <tr>
                <td colspan="3">No settings have been configured.</td>
            </tr>
        }
        else
        {
            @foreach (var setting in Model.Settings)
            {
                <tr>
                    <td>@setting.Key</td>
                    <td><code>@setting.Value</code></td>
                    <td>@setting.Description</td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>
